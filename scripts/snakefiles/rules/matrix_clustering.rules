# Check/set parameters
if not "qsub" in config.keys():
    sys.exit("The parameter qsub must be defined in the config file")

if not "matrix-clustering" in config.keys():
    config["matrix-clustering"] = {}

# Rule
rule matrix_clustering:
    """Motif discovery using the peak-motifs pipeline.

    Find out more @ http://floresta.eead.csic.es/rsat/help.peak-motifs.html

    Required parameters:
        config["qsub"]

    Optional parameters:
        ...

    Contributors: Claire Rioualen
    """
    input: 
        matrices = "{caller_dir}/peak-motifs/{peaks}_peak-motifs/results/discovered_motifs/peak-motifs_motifs_discovered.tf"
    output: 
        html = "{caller_dir}/matrix-clustering/{peaks}_matrix-clustering_SUMMARY.html"
    params:
        prefix = "{caller_dir}/matrix-clustering/{peaks}_matrix-clustering",
        qsub = config["qsub"] + " -e {caller_dir}/matrix-clustering/{peaks}_matrix-clustering_qsub.err" \
                  + " -o {caller_dir}/matrix-clustering/{peaks}_matrix-clustering_qsub.out" 
    log: "{caller_dir}/matrix-clustering/{peaks}_matrix-clustering.log"
    benchmark: "{caller_dir}/matrix-clustering/{peaks}_matrix-clustering_bench.txt"
    shell: """
($RSAT/perl-scripts/matrix-clustering \
-v 1 -max_matrices 300 -matrix {wildcards.TF}_peakmotifs \
{input.matrices} transfac \
-hclust_method average -calc sum -title '{wildcards.TF}' -metric_build_tree 'Ncor' -lth w 5 -lth cor 0.6 -lth Ncor 0.4 \
-quick -label_in_tree name -return json,heatmap \
-o {params.prefix} ) 2> {log}

"""
