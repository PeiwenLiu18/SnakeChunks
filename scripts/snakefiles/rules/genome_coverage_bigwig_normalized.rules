        treatment = config["dir"]["samples"] + "/{treatment}/{treatment}{preprocess,.*}_sorted_pos.bed",
        control=config["dir"]["samples"] + "/{control}/{control}{preprocess,.*}_sorted_pos.bed"
        bam = "{reads}_sorted_pos.bam",
        bai = "{reads}_sorted_pos.bam.bai"
    output: "{reads}.bw"
