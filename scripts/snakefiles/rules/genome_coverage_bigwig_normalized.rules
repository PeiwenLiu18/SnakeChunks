            qsub = config["qsub"] + " -e {reads}_bam2bigwig_qsub.err -o {reads}_bam2bigwig_qsub.out"
    log:  "{reads}_bam2bigwig.log"
    benchmark:  "{reads}_bam2bigwig_benchmark.txt"
    shell: "bamCoverage -b {input.bam} -o {output} 2> {log}" 


